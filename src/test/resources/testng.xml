<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd" >
<suite name="PetClinic Custom Tests" parallel="false">

	<!-- API Tests -->
	<test name="API Tests">
		<packages>
			<package name="org.springframework.samples.petclinic.tests.api.*"/>
		</packages>
	</test>

	<!-- GUI Tests -->
	<test name="GUI Tests">
		<packages>
			<package name="org.springframework.samples.petclinic.tests.gui.*"/>
		</packages>
	</test>

</suite>
